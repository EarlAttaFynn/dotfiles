
alias ls='eza -Gla'

alias p='python'
alias zlj='zellij'
alias v='nvim'
alias vi='nvim'
alias vic='nvim $HOME/.config/zsh/'

# nvim
alias v='nvim'
alias vi='nvim'
alias vic='nvim $HOME/.config/zsh/'

# dotfiles bare repo
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias cfg='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias cfgs='cfg status'
alias cfga='cfg add'
alias cfgc='cfg commit -m'
alias cfgp='cfg push'

# sys-config bare repo
alias syscfg='sudo git --git-dir=/opt/sys-config.git --work-tree=/'
alias syscfgs='syscfg status'
alias syscfga='syscfg add'
alias syscfgc='syscfg commit -m'
alias syscfgp='syscfg push'

# tailscale
## Toggle ON: Route everything home
alias vpn-home='tailscale up --ssh --exit-node=ts-zephyr --exit-node-allow-lan-access && tailscale status && echo "ðŸ”’ VPN: Full Tunnel to Zephyr ACTIVE"'
## Toggle OFF: Split Tunnel (DNS only)
alias vpn-local='tailscale up --exit-node= --ssh && tailscale status && echo "âš¡ VPN: Split Tunnel (DNS Only) ACTIVE"'
## Toggle DOWN: Turn off tailscale entirely
alias vpn-off='tailscale down && echo tailscale is down'
## Check Status
alias vpn-stat='tailscale status'

# QOL
alias mount-media='sudo /usr/local/bin/scripts/mount-media'
alias eject-media='sudo /usr/local/bin/scripts/eject-media'

# Cargo
alias cr='cargo run'
